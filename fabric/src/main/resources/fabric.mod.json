{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contributors": [
    ""
  ],
  "contact": {
    "sources": "${mod_repo}",
    "issues": "${mod_repo}/issues",
    "homepage": "${curse_page}"
  },
  "license": "${mod_license}",
  "icon": "logo_${mod_id}.png",
  "environment": "${mod_target_environment}",
  "entrypoints": {
    "main": [
      "com.ultramega.botanypotstiers.fabric.impl.FabricMod"
    ],
    "jei_mod_plugin": [
      "com.ultramega.botanypotstiers.common.addons.jei.BotanyPotsTiersJEIPlugin"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json",
    "${mod_id}.fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": "*",
    "minecraft": "${minecraft_version}",
    "java": ">=${java_version}",
    "botanypots": ">=${botanypots_version}",
    "bookshelf": ">=${bookshelf_version}",
    "prickle": ">=${prickle_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.curseforge": "${curse_page}",
        "modmenu.modrinth": "${modrinth_page}"
      }
    }
  }
}